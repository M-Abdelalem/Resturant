@model Models.User


        @{
    ViewBag.Title = "Add";
        }

        <h3 style="margin-left:120px">Create</h3>
        <!DOCTYPE HTML>
        <html>
        <head>
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="../maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        </head>

        <body>

            <div class="container" style="width:950px">

                <form class="form-horizontal" role="form" method="post" style="width:950px">


                    <label class="control-label col-sm-2" for="email">Name:</label>

                    @Html.EditorFor(item => item.Name, null, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(item => item.Name, "", new { @class = "text-danger" })
                    <br />

                    <label class="control-label col-sm-2" for="email">password:</label>

                    @Html.EditorFor(item => item.password, null, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(item => item.password, "", new { @class = "text-danger" })


                    <br />

                    <label class="control-label col-sm-2" for="email">telephone:</label>

                    @Html.EditorFor(item => item.telephone, null, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(item => item.telephone, "", new { @class = "text-danger" })

                    <br />

                    <label class="control-label col-sm-2" for="email">address:</label>

                    @Html.EditorFor(item => item.address, null, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(item => item.address, "", new { @class = "text-danger" })

                    <br />
                    <label class="control-label col-sm-2" for="email">FK_Role:</label>
            

                        @*@Html.ValidationMessageFor(item => item.FK_Role, "", new { @class = "text-danger" })*@
                    
            


                    @Html.DropDownListFor(item => item.FK_Role, new SelectList(ViewBag.fk, "Id", "Name"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(item => item.FK_Role, "", new { @class = "text-danger" })

                    <br />

                    @Html.ValidationSummary(false, "", new { @class="text-danger" })

                    <br /> <button type="submit">Create</button>

                    <br /> <br />
                    @Html.ActionLink("RETURN", "index")
            </div>


            <script src="../ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min_2.js"></script>
            <script src="../maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        </body>

    </html>

